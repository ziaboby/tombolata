{
  "private": true,
  "name": "cardgenerator",
  "version": "2.1.0",
  "license": "MIT",
  "engines" : { 
    "npm" : ">=8.0.0 <9.0.0",
    "node" : ">=16.0.0 <17.0.0"
  },
  "scripts": {
    "build": "preact build --no-prerender",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "deploy": "gh-pages -b build -d build -m \"New version deployed\""
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.0.1",
    "eslint": "^8.29.0",
    "eslint-config-preact": "^1.3.0",
    "gh-pages": "^4.0.0",
    "jest": "^27.0.6",
    "jest-preset-preact": "^4.0.5",
    "preact-cli": "^3.4.1",
    "sirv-cli": "2.0.2"
  },
  "dependencies": {
    "preact": "^10.11.3",
    "preact-render-to-string": "^5.2.6",
    "preact-router": "^4.1.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.[j]s?(x)",
      "**/?(*.)+(spec|test).[j]s?(x)"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx}"
    ],
    "coverageDirectory": "<rootDir>/tests/coverage",
    "coverageReporters": [
      "json",
      "text",
      "html",
      "cobertura"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 1,
        "functions": 1,
        "lines": 1,
        "statements": 1
      }
    }
  }
}
